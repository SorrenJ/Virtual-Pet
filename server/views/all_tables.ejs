<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beastly Bonds Development Database</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="links">
        <h3>Explore More:</h3>
        <a href="/home">Go home</a>
        <a href="/adopt">Adopt a Pet</a>
        <a href="/shop">Visit the Shop</a>
        <a href="/all_tables">View All Tables</a>
    </div>
    <h1>Beastly Bonds Development Database</h1>

    <% const tables = [
        { name: 'Species', data: species },
        { name: 'Users', data: users },
        { name: 'Pets', data: pets },
        { name: 'Inventory', data: inventory },
        { name: 'User Food', data: userFood },
        { name: 'User Toiletries', data: userToiletries },
        { name: 'User Toys', data: userToys },
        { name: 'Shop', data: shop },
        { name: 'Toys', data: toys },
        { name: 'Toiletries', data: toiletries },
        { name: 'Foods', data: foods },
        { name: 'Colors', data: colors },
        { name: 'Moods', data: moods },          <!-- Added Moods -->
        { name: 'Sprites', data: sprites },      <!-- Added Sprites -->
        { name: 'Personalities', data: personalities } <!-- Added Personalities -->
    ]; %>

    <% tables.forEach(table => { %>
        <h2><%= table.name %></h2>
        <table>
            <thead>
                <tr>
                    <% if (table.data.length > 0) { %>
                        <% Object.keys(table.data[0]).forEach(column => { %>
                            <th><%= column %></th>
                        <% }); %>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <% table.data.forEach(row => { %>
                    <tr>
                        <% Object.values(row).forEach(value => { %>
                            <td><%= value %></td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% }); %>
</body>
</html>
